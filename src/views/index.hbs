<!DOCTYPE html>
<html>
<head>
    <title>register</title>
    <link rel="stylesheet" type="text/css" href="bootstrap.min.css">
    <style type="text/css">
        ._{
            font-size:200%;
        }
        </style>
</head>
<body class="bg-dark">
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-4">
                <form method="POST" action="/login">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="lead _">Login</h1>
                        </div>
                        <div class="card-body">
                            <div class="input">
                                <label class="lead">Name:</label>
                                <input type="text" name="user_name_login" class="form-control">
                            </div>
                            <div class="input">
                                <label class="lead">Email:</label>
                                <input type="email" name="user_email_login" class="form-control">
                            </div>
                            <div class="input">
                                <label class="lead">password:</label>
                                <input type="password" name="user_pass_login" class="form-control">
                            </div>
                            <button class="btn btn-primary mt-2">Send</button>
                        </div>
                        <div class="card-footer">
                            
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-4">
                <form method="POST" action="/sing-in">
                    <div class="card">
                        <div class="card-header">
                            <h1 class="lead _">Sing in:</h1>
                        </div>
                        <div class="card-body">
                            <div class="input">
                                <label class="lead">Email:</label>
                                <input type="email" name="user_email" class="form-control">
                            </div>
                            <div class="input">
                                <label class="lead">password:</label>
                                <input type="password" name="user_pass" class="form-control">
                            </div>
                            <button class="btn btn-primary mt-2">Send</button>
                        </div>
                        <div class="card-footer">
                            
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-4">
                <div>
                    {{#if message.success}}
                      <span class="alert badge alert-success">{{message.success}}</span>
                    {{/if}}
                    {{#if message.error}}
                      <span class="alert badge alert-danger">{{message.error}}</span>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    
    <script type="text/javascript">
        setTimeout(function(){
            var alert = document.querySelectorAll('.alert')[0]
            alert.parentNode.removeChild(alert) 
        }, 3000)
    </script>
</body>
</html>